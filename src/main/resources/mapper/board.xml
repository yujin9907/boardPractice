<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.demo.domain.board.BoardDao">
    <select id="findAll" resultType="site.metacoding.demo.domain.board.Board">
        SELECT * FROM board ORDER BY id DESC
    </select>
    <select id="findById" resultType="site.metacoding.demo.domain.board.Board">
        select * from board where id=#{id};
    </select>
    <insert id="insert">
        INSERT INTO board(title, content, image, date) VALUES(#{title}, #{content}, #{image}, now());
    </insert>

</mapper>